
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".Hotel_reg_nav"
        android:background="@drawable/sri_lanka_background_image_01"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:background="@color/mrtSubMainBackgroundColor"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/mrtFontColor"
                    android:text="Welcome to Hotel Registration"
                    android:textSize="32sp"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"
                    />




                <TextView
                    android:id="@+id/hotelRegistrationFormButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/my_tourist_account_button"
                    android:gravity="center"
                    android:padding="10dp"

                    android:text="Hotel Registration"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hotelListButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:text="Hotel List"
                    android:background="@drawable/my_tourist_account_button"
                    android:layout_marginTop="50dp"
                    />





            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

